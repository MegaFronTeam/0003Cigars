mixin navItem(...items)
	each item in items
		li
			a(href="#")= item
mixin footer()
	+b.FOOTER.footer
		.container
			.row
				+e.navs.col
					+b.footer-nav
						+e.title.h4 Меню
						ul
							+navItem('Новости','Бренды','Бутик','Партнеры','Обучение','Клуб','Сигарная карта','Контакты')
					+b.footer-nav
						+e.title.h4 Каталог
						ul
							+navItem('Сигары','Сигариллы (Mini, Clubs, Chicos)','Табаки трубочные')
				.col-auto.text-center
					+logo()
				+e.contacts.col.text-end
					+addr()
					+e.btn(href="#") Написать консультанту
					+e.docs
						a(href='#') Политика кофниденциальности
						a(href='#') Пользовательское соглашение
					+e.ruvents('href=#') Разработка сайта
						+img('img/ruvents.png')
						
